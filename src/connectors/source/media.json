{
    "name": "seoTitle-connector",
    "config": {

        "connector.class": "io.debezium.connector.sqlserver.SqlServerConnector",
        "tasks.max": "1",

        "database.hostname": "sqlserver",
        "database.port": "3306",
        "database.user": "debezium",
        "database.password": "dbz",
        "database.server.id": "184054",
        "database.server.name": "dbserver1",
        "table.include.list": "dbo.TBCDmedia",

        "database.history.kafka.bootstrap.servers": "kafka:9092",
        "database.history.kafka.topic": "schema-changes.catalog",

        "transforms": "route,renameTopic",
        "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
        "transforms.route.regex": "([^.]+)\\.([^.]+)\\.([^.]+)",
        "transforms.route.replacement": "$3",

        "transforms.renameTopic.type":"org.apache.kafka.connect.transforms.RegexRouter",
        "transforms.renameTopic.regex":"media",
        "transforms.renameTopic.replacement":"product_media"
        
    }
}
